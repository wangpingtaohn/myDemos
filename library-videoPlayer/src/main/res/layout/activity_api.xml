<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/dp12"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="视频播放器"
            android:textColor="#333333"
            android:textSize="16dp"
            android:textStyle="bold" />
    </FrameLayout>

    <TextView
        android:id="@+id/btn_vod"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp12"
        android:gravity="center_vertical"
        android:text="播放视频api"
        android:textSize="16dp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grey_999999"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btn_live"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp12"
        android:gravity="center_vertical"
        android:text="圈子动态发布播放器"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grey_999999"
        android:visibility="visible" />

    <TextView
        android:id="@+id/btn_vertical_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp12"
        android:gravity="center_vertical"
        android:text="竖屏视频" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grey_999999" />

    <TextView
        android:id="@+id/btn_landscape_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp12"
        android:gravity="center_vertical"
        android:onClick="onButtonClick"
        android:text="横屏视频" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grey_999999" />

    <TextView
        android:id="@+id/btn_auto_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp12"
        android:gravity="center_vertical"
        android:onClick="onButtonClick"
        android:text="自动播放列表视频"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_grey_999999"
        android:visibility="gone" />
</LinearLayout>