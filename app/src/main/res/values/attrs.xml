<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PQRefreshView">
        <attr name="crv_refreshEnable" format="boolean" />
        <attr name="crv_loadMoreEnable" format="boolean" />
        <attr name="crv_layout" format="reference" />
    </declare-styleable>

    <declare-styleable name="FrameAnimImageView">
        <attr name="anim_isRepeat" format="boolean" />
        <attr name="anim_isAutoPlay" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MyTextView">
        <attr name="myText" format="string"></attr>
        <attr name="textStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="medium" value="1" />
            <enum name="bold" value="2" />
            <enum name="italic" value="3" />
        </attr>
    </declare-styleable>


    <declare-styleable name="IncreaseTextView">
        <attr name="num" format="integer"/>
        <attr name="ani_duration" format="integer"/>
        <attr name="text_color" format="color"/>
        <attr name="text_size" format="dimension"/>
        <attr name="text_dimen" format="dimension"/>
    </declare-styleable>

</resources>
