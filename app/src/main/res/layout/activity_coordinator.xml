<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!--header-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

        <ImageView
                android:id="@+id/iv_gh_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_gh_back" />

        <TextView
                android:id="@+id/tv_gh_search"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_gh_forward"
                android:layout_toRightOf="@id/iv_gh_back"
                android:background="@drawable/bg_edit_search_f3"
                android:drawableLeft="@drawable/ic_search_address"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:text="搜索"
                android:textColor="#999999"
                android:textDirection="locale"
                android:textSize="14sp" />


        <ImageView
                android:id="@+id/iv_gh_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_gh_foward" />

    </RelativeLayout>
    <!--header-->

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnableAutoLoadMore="false"
            app:srlEnableHeaderTranslationContent="true"
            app:srlEnableOverScrollBounce="false">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true">

            <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/translucent"
                    app:elevation="0dp">

                <!--                <com.google.android.material.appbar.CollapsingToolbarLayout-->
                <!--                        android:id="@+id/CollapsingToolbarLayout"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        app:collapsedTitleGravity="center"-->
                <!--                        app:contentInsetLeft="0dp"-->
                <!--                        app:contentInsetStart="0dp"-->
                <!--                        app:contentScrim="@color/white"-->
                <!--                        app:expandedTitleGravity="left"-->
                <!--                        app:expandedTitleMarginStart="110dp"-->
                <!--                        app:expandedTitleMarginTop="-20dp"-->
                <!--                        app:layout_scrollFlags="scroll|exitUntilCollapsed"-->
                <!--                        app:scrimAnimationDuration="200"-->
                <!--                        app:title=" ">-->

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_mygold_money_banner"
                        app:layout_scrollFlags="scroll|enterAlwaysCollapsed" />//加上此属性才能跟随滚动

                <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="吸顶了" />
                <!--                </com.google.android.material.appbar.CollapsingToolbarLayout>-->
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/coordinator_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>