<?xml version="1.0" encoding="utf-8"?>
<com.wpt.mydemos.refresh.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipe_layout"
        tools:context=".refresh.SwipeRefreshActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_gh_cover" />
        <TextView
                android:id="@+id/tv_swipe"
                android:text="哈哈我给你打个老大哥"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/color_111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="我是常规体"
                android:textSize="30sp"
                android:textColor="@color/color_111"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_black"
                android:text="我是黑体"
                android:textSize="30sp"
                android:textColor="@color/color_111"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="我是粗体"
                android:textSize="30sp"
                android:textColor="@color/color_111"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</com.wpt.mydemos.refresh.SwipeRefreshLayout>