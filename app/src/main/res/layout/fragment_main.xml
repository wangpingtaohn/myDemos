        <Button
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:id="@+id/main_variable_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="editText可变颜色"/>


        <Button
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:id="@+id/main_toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="toast重复"/>

        <Button
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:id="@+id/main_elevation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阴影"/>


        <Button
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:id="@+id/main_flexbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FlexBox"/>
        <Button
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:id="@+id/main_recyclerview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="recyclerview2"/>

        <Button
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:id="@+id/main_object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
