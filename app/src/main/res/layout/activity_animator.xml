<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".animator.AnimatorActivity">

    <Button
            android:id="@+id/btn_animator_start"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="start"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btn_animator_stop"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:text="stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_animator"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_progress_retry"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/img_animator2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="260dp"
        android:src="@drawable/qianbao_3_01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_animator2"
        app:lottie_fileName="lottie.json"
        app:lottie_autoPlay="true"
        app:lottie_repeatMode="restart"
        app:lottie_loop="true"
        android:id="@+id/lottieView0"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lottieView0"
        app:lottie_fileName="haipin.json"
        app:lottie_autoPlay="true"
        android:id="@+id/lottieView"
        app:lottie_repeatMode="restart"
        app:lottie_loop="true"
        android:layout_width="360dp"
        android:layout_height="360dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>