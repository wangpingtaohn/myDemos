<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".textview.AnimatorTextViewActivity">
    
    <com.wpt.mydemos.textview.IncreaseTextView
            app:num="111"
            app:text_color="@color/color_111"
            app:text_size="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tv_animator"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

    <Button
            android:text="start"
            app:layout_constraintTop_toBottomOf="@id/tv_animator"
            android:id="@+id/btn_animator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>