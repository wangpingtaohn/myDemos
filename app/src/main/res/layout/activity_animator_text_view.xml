<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".textview.AnimatorTextViewActivity">
    
    <com.wpt.mydemos.textview.IncreaseTextView
            app:num="111"
            app:text_color="@color/color_111"
            app:text_size="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tv_animator"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

    <TextView
            android:id="@+id/tv_1"
            android:textSize="20sp"
            android:text="哈哈哈哈哈 -- defalut"
            android:textColor="#111"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_2"
            android:textSize="20sp"
            android:text="哈哈哈哈哈 -- Typeface.defaultFromStyle"
            android:textColor="#111"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_3"
            android:textSize="20sp"
            android:text="哈哈哈哈哈 -- isFakeBoldText"
            android:textColor="#111"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_4"
            android:textSize="20sp"
            android:text="哈哈哈哈哈 -- isFakeBoldText与Typeface.defaultFromStyle"
            android:textColor="#111"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.wpt.mydemos.textview.FakeBoldTextView
            android:id="@+id/tv_5"
            android:textSize="20sp"
            android:text="哈哈哈哈哈"
            android:textColor="#111"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_6"
            android:textSize="20sp"
            android:text="哈哈哈哈哈 -- BOLD"
            android:textColor="#111"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:text="start"
            app:layout_constraintTop_toBottomOf="@id/tv_animator"
            android:id="@+id/btn_animator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp">
        <ImageView
                android:layout_gravity="center"
                android:src="@color/green"
                android:layout_width="40dp"
                android:layout_height="40dp"/>


    </FrameLayout>

</LinearLayout>