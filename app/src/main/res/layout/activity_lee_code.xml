<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".leecode.LeeCodeActivity">

    <EditText
            android:id="@+id/et_leecode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="请输入内容"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/btn_leecode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:text="开始"
            app:layout_constraintTop_toBottomOf="@id/et_leecode" />

    <TextView
            android:id="@+id/tv_leecode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toBottomOf="@id/btn_leecode" />

</androidx.constraintlayout.widget.ConstraintLayout>