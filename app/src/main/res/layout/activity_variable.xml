<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/textview"
            android:text="text"
            android:gravity="center"
            android:background="@drawable/bg_click_dfdfdf"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    <EditText
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textview"
            android:id="@+id/et_content"
            android:minHeight="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:layout_marginTop="10dp"
            android:layout_below="@id/et_content"
            android:id="@+id/et_content2"
            android:minHeight="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <include layout="@layout/layout_publish_vertical_item"/>

    <RelativeLayout
            android:id="@+id/bottom_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
    >
        <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_red"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_red_circle"
        />
        <TextView
                android:id="@+id/tv_blue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_blue_circle"
        />
        <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_green"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_green_circle"
        />

    </RelativeLayout>

</RelativeLayout>