<?xml version="1.0" encoding="utf-8"?>
<com.wpt.mydemos.widget.VerticalDragView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vertical_item_layout"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp">

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_D8D8D8"/>
    <View
            android:layout_marginTop="4dp"
            android:layout_width="42dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_ccc_corner5dp"/>
    <com.wpt.mydemos.widget.DragItemView
            android:id="@+id/vertical_add_pic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:gravity="center_vertical">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_publish_photo"/>

        <TextView
                android:textSize="16sp"
                android:text="照片/视频"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </com.wpt.mydemos.widget.DragItemView>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="51dp"
            android:background="@color/color_e5e5e5"/>
    <LinearLayout
            android:background="@drawable/bg_click_dfdfdf"
            android:id="@+id/vertical_add_face"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:gravity="center_vertical">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_publish_face"/>

        <TextView
                android:textSize="16sp"
                android:text="表情包"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="51dp"
            android:background="@color/color_e5e5e5"/>
    <LinearLayout
            android:background="@drawable/bg_click_dfdfdf"
            android:id="@+id/vertical_add_link"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:gravity="center_vertical">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_publish_link"/>

        <TextView
                android:textSize="16sp"
                android:text="添加链接"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="13sp"
                android:text="插入视频和音频链接，解析之后更直观"
                android:layout_marginLeft="13dp"
                android:textColor="@color/color_999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="51dp"
            android:background="@color/color_e5e5e5"/>
    <LinearLayout
            android:background="@drawable/bg_click_dfdfdf"
            android:id="@+id/vertical_add_loc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:gravity="center_vertical">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_publish_loc"/>

        <TextView
                android:textSize="16sp"
                android:text="添加定位"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="51dp"
            android:background="@color/color_e5e5e5"/>
    <LinearLayout
            android:background="@drawable/bg_click_dfdfdf"
            android:id="@+id/vertical_add_at"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:gravity="center_vertical">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_publish_at"/>

        <TextView
                android:textSize="16sp"
                android:text="\@某人"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="51dp"
            android:background="@color/color_e5e5e5"/>
    <LinearLayout
            android:background="@drawable/bg_click_dfdfdf"
            android:id="@+id/vertical_add_long_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:gravity="center_vertical">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_publish_long_text"/>

        <TextView
                android:textSize="16sp"
                android:text="发布长动态"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="51dp"
            android:background="@color/color_e5e5e5"/>
    <LinearLayout
            android:background="@drawable/bg_click_dfdfdf"
            android:id="@+id/vertical_add_vote"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:gravity="center_vertical">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_publish_vote"/>

        <TextView
                android:textSize="16sp"
                android:text="发起投票"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="51dp"
            android:background="@color/color_e5e5e5"/>

</com.wpt.mydemos.widget.VerticalDragView>
