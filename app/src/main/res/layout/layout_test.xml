<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp">

        <TextView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="左边"
                android:textSize="24sp"
                android:textColor="#ff0000"
                android:layout_toLeftOf="@id/center"
                android:layout_centerVertical="true"
        />


        <TextView
                android:textColor="#00ff00"
                android:id="@+id/center"
                android:textSize="24sp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="130dp"
                android:layout_marginLeft="10dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="中间中间中间中间中间中间中间中间中间"
        />

        <TextView
                android:id="@+id/right"
                android:textColor="#0000ff"
                android:textSize="24sp"
                android:text="右边"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
        />

    </RelativeLayout>

    <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/left2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="左边"
                android:textSize="24sp"
                android:textColor="#ff0000"
                android:layout_toLeftOf="@id/center"
                android:layout_centerVertical="true"
        />


        <TextView
                android:textColor="#00ff00"
                android:id="@+id/center2"
                android:textSize="24sp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:lines="1"
                android:ellipsize="end"
                android:text="中间中间中间中间中间中间中间中间中间"
                android:drawableRight="@drawable/ic_video_detail_flow_btn"
        />

        <!--<ImageView-->
        <!--android:id="@+id/right2"-->
        <!--android:textColor="#0000ff"-->
        <!--android:textSize="24sp"-->
        <!--android:text="右边"-->
        <!--android:src="@drawable/ic_video_detail_flow_btn"-->
        <!--android:layout_marginRight="16dp"-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--/>-->

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp">
        <TextView
                android:id="@+id/tv_const_left"
                android:layout_marginLeft="16dp"
                android:text="left"
                android:textSize="28sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_const_center"
                android:layout_marginLeft="16dp"
                android:text="centercentercentercentercenter"
                android:textSize="28sp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/tv_const_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_const_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tv_const_right"
                android:layout_marginRight="16dp"
                android:text="right"
                android:textSize="28sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </android.support.constraint.ConstraintLayout>

</LinearLayout>
