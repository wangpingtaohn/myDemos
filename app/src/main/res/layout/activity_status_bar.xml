<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".statusbar.StatusBarActivity">

    <TextView
            tools:text="text"
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <Button
            android:text="黑色字体\nSYSTEM_UI_FLAG_LIGHT_STATUS_BAR"
            android:id="@+id/setStatusBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_text"/>

    <Button
            android:text="白色字体\nSYSTEM_UI_FLAG_VISIBLE"
            android:id="@+id/setStatusDefatultBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setStatusBtn"/>

    <Button
            android:text="全屏模式(无状态栏，无虚拟键)"
            android:id="@+id/screenBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setStatusDefatultBtn"/>
    <Button
            android:text="全屏模式(无状态栏，有虚拟键)"
            android:id="@+id/screenBtn2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/screenBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>